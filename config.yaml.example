# Google Tasks and Notion Integration Configuration
# Copy this file to config.yaml and fill in your actual values

# Notion Configuration
notion:
  token: "your_notion_integration_token_here"
  database_id: "your_notion_database_id_here"
  page_url_root: "https://www.notion.so/your-workspace/"

# Google Tasks Configuration
google_tasks:
  # Path to your Google client_secret.json file
  client_secret_file: "client_secret.json"
  # Path where token.pkl will be stored
  token_file: "token.pkl"

# Timezone Settings
timezone:
  name: "Asia/Kolkata"
  offset_from_gmt: "+05:30"

# Sync Settings
sync:
  past_weeks: 4
  future_weeks: 10

# Default List Configuration
default_list:
  name: "List"
  id: "your_default_google_tasks_list_id"

# Notion Database Field Names
notion_fields:
  task_name: "Name"
  status: "Done"
  category: "Category"
  due_date: "Due Date"
  description: "Description"
  gtasks_task_id: "GTasks Task ID"
  gtasks_list_id: "GTasks List ID"
  last_synced: "Last Synced"

# Project Configuration
project:
  # Set to true when running in Docker
  docker_env: false
  # Local project path (used when not in Docker)
  local_path: "/Users/dhvanilparikh/DHP/P/gtasks-notion-integration/"